<p id="notice"><%= notice %></p>

<h1>
  <%= first_name %>
  <%= last_name %>
</h1>

<h2>Books</h2>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <!--<th>Tags</th>-->
    <th>Category</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% current_user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= rating book %></td>
        <!--<td><%= book.tags %></td>-->
        <td><%= book.category %></td>
        <td><%= email book %></td>
        <td><%= link_to 'Show', book %></td>
        <%if user? book%>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "new book", new_user_book_path(current_user) %>

<%= link_to "settings", edit_user_registration_path %>
