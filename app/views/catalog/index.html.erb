<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>BOOKS CATALOG</h1>
<div class='container'>
      <div class='row'>
        <% @books.each do |book| %>
            <%= link_to book_path(book) do %>
            <div class="entry book_preview col-lg-3 col-md-3 col-sm-12" >
              <h3><%= book.title %></h3>
              <% end %>


            </div>
        <% end %>
      </div>
</div>