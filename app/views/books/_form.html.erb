<%= form_for @book do |f| %>
    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </div>

    <h3>Tasks</h3>
    <div id="chapters">
      <%= f.fields_for :chapters do |chapters| %>
          <%= render 'chapter_fields', f: chapters %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add task', f, :chapters %>
      </div>
    </div>
    <%= f.submit %>
<% end %>
