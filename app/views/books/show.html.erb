

<p id="notice"><%= notice %></p>

<strong>Title:</strong>
<%= @book.title %>
</p>
<p>
  <strong>Author:</strong>
  <%= @book.user_id %>
</p>
<%= rating_for @book, "lol", :star => 5, :cancel => true, :disable_after_rate => false %>
<h3>Chapters:</h3>
<div>
<ul>
  <% @book.chapters.each do |c| %>
      <div class="  col-lg-4 col-md-4 col-sm-12" >
        <h3><%= c.title %></h3>
        <%=raw c.text%>
      </div>
  <% end %>
</ul>
</div>
<div>
<%if current_user %>
    <%= link_to 'Edit', edit_user_book_path(user_id: current_user.id, id: @book) %> |
<% end %>
<%= link_to 'Back', user_path(@book.user_id) %>
</div>